<?xml version="1.0" encoding="utf-8"?>
<com.np.a09sidemenu.demo2.SliderMenu2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slider_menu2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.np.a09sidemenu.demo2.SliderMenuActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">
            <Button
                android:onClick="close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭侧边栏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="horizontal">
            <Button
                android:onClick="open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开侧边栏"/>
        </LinearLayout>
    </LinearLayout>

</com.np.a09sidemenu.demo2.SliderMenu2>
