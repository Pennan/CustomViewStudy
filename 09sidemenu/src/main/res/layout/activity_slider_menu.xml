<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:np="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_slider_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.np.a09sidemenu.demo1.SliderMenuActivity">

    <com.np.a09sidemenu.demo1.SliderMenu
        android:id="@+id/slider_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        np:separator_width="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭侧边栏"
                android:onClick="closeSlider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开侧边栏"
                android:onClick="openSlider"/>
        </LinearLayout>
    </com.np.a09sidemenu.demo1.SliderMenu>

</LinearLayout>
