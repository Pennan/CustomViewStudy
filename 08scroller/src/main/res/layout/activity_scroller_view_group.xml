<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scroller_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.np.a08scroller.demo3.ScrollerViewGroupActivity">

    <com.np.a08scroller.demo3.ScrollerViewGroup
        android:id="@+id/scroller_view_group"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroller_view_group"
        android:orientation="horizontal">
        <Button
            android:onClick="startScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始滚动" />
        <Button
            android:onClick="stopScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止滚动" />
        <Button
            android:onClick="goBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="回到原处" />
    </LinearLayout>

</RelativeLayout>
