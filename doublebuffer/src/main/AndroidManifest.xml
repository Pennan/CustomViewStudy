<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.np.doublebuffer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".demo.demo1.LineActivity1" />
        <activity android:name=".demo.demo2.LineActivity2" />
        <activity android:name=".demo.demo3.LineActivity3" />
        <activity android:name=".demo.demo4.RectActivity1" />
        <activity android:name=".demo.demo5.RectActivity2" />
        <activity android:name=".demo.demo6.RectActivity3" />
        <activity android:name=".demo.demo7.activity.DrawerActivity"
            android:theme="@style/AppTheme.NoTitle"/>
    </application>

</manifest>